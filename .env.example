# =============================================================================
# COVENANT ENTERPRISE - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and update with your actual values
# Never commit .env to version control!

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application Environment (development, staging, production)
COVENANT_ENV=development

# Application Name
COVENANT_APP_NAME="Covenant Enterprise"

# Application Version
COVENANT_VERSION=1.0.0

# Debug Mode (true/false) - NEVER use true in production!
COVENANT_DEBUG=false

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
COVENANT_LOG_LEVEL=INFO

# Log Format (json, text)
COVENANT_LOG_FORMAT=json

# Timezone
COVENANT_TIMEZONE=UTC

# =============================================================================
# API SERVER SETTINGS
# =============================================================================

# API Host
COVENANT_API_HOST=0.0.0.0

# API Port
COVENANT_API_PORT=8000

# API Workers (for production)
COVENANT_API_WORKERS=4

# API Timeout (seconds)
COVENANT_API_TIMEOUT=60

# Maximum Request Size (bytes)
COVENANT_MAX_REQUEST_SIZE=10485760  # 10MB

# Enable API Documentation
COVENANT_ENABLE_DOCS=true

# API Documentation URL
COVENANT_DOCS_URL=/docs

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Secret Key (MUST be changed in production!)
COVENANT_SECRET_KEY=change-this-to-a-random-string-in-production

# API Key for Enterprise Endpoints
COVENANT_API_KEY=your-api-key-here

# JWT Settings
COVENANT_JWT_ALGORITHM=HS256
COVENANT_JWT_EXPIRATION_MINUTES=60
COVENANT_JWT_REFRESH_EXPIRATION_DAYS=7

# Password Hashing
COVENANT_PASSWORD_HASH_ALGORITHM=bcrypt
COVENANT_PASSWORD_MIN_LENGTH=12

# CORS Settings
COVENANT_CORS_ORIGINS=http://localhost:3000,http://localhost:8080
COVENANT_CORS_ALLOW_CREDENTIALS=true
COVENANT_CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,PATCH
COVENANT_CORS_ALLOW_HEADERS=*

# Rate Limiting
COVENANT_RATE_LIMIT_ENABLED=true
COVENANT_RATE_LIMIT_PER_MINUTE=60
COVENANT_RATE_LIMIT_PER_HOUR=1000

# Session Settings
COVENANT_SESSION_TIMEOUT=3600  # seconds
COVENANT_SESSION_COOKIE_SECURE=true
COVENANT_SESSION_COOKIE_HTTPONLY=true
COVENANT_SESSION_COOKIE_SAMESITE=Lax

# =============================================================================
# DATABASE SETTINGS
# =============================================================================

# Database Type (postgresql, mysql, sqlite)
COVENANT_DB_TYPE=postgresql

# PostgreSQL Connection
COVENANT_DB_HOST=localhost
COVENANT_DB_PORT=5432
COVENANT_DB_NAME=covenant_enterprise
COVENANT_DB_USER=covenant_user
COVENANT_DB_PASSWORD=change-this-password
COVENANT_DB_SSL_MODE=require

# Database Connection Pool
COVENANT_DB_POOL_SIZE=20
COVENANT_DB_MAX_OVERFLOW=10
COVENANT_DB_POOL_TIMEOUT=30
COVENANT_DB_POOL_RECYCLE=3600

# SQLite (for development only)
# COVENANT_DB_SQLITE_PATH=./data/covenant.db

# =============================================================================
# REDIS SETTINGS
# =============================================================================

# Redis Connection
COVENANT_REDIS_HOST=localhost
COVENANT_REDIS_PORT=6379
COVENANT_REDIS_DB=0
COVENANT_REDIS_PASSWORD=
COVENANT_REDIS_SSL=false

# Redis Connection Pool
COVENANT_REDIS_POOL_SIZE=10
COVENANT_REDIS_TIMEOUT=5

# Cache Settings
COVENANT_CACHE_ENABLED=true
COVENANT_CACHE_TTL=3600  # seconds
COVENANT_CACHE_MAX_SIZE=1000

# =============================================================================
# LLM PROVIDER SETTINGS
# =============================================================================

# OpenAI
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_MAX_TOKENS=4096

# Google AI
GOOGLE_API_KEY=your-google-ai-key-here
GOOGLE_MODEL=gemini-1.5-pro

# LLM Request Timeout
COVENANT_LLM_TIMEOUT=30

# LLM Retry Settings
COVENANT_LLM_MAX_RETRIES=3
COVENANT_LLM_RETRY_DELAY=1

# =============================================================================
# BLOCKCHAIN SETTINGS
# =============================================================================

# Blockchain Provider
COVENANT_BLOCKCHAIN_PROVIDER=ethereum
COVENANT_BLOCKCHAIN_NETWORK=mainnet  # mainnet, testnet, local

# Ethereum Web3 Provider
COVENANT_WEB3_PROVIDER_URL=https://mainnet.infura.io/v3/your-project-id
COVENANT_WEB3_CHAIN_ID=1

# Smart Contract Address
COVENANT_CONTRACT_ADDRESS=0x...

# Wallet Settings
COVENANT_WALLET_PRIVATE_KEY=your-private-key-here  # NEVER commit this!
COVENANT_WALLET_ADDRESS=0x...

# Gas Settings
COVENANT_GAS_LIMIT=200000
COVENANT_GAS_PRICE_MULTIPLIER=1.2

# IPFS Settings
COVENANT_IPFS_HOST=localhost
COVENANT_IPFS_PORT=5001
COVENANT_IPFS_PROTOCOL=http

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Prometheus Metrics
COVENANT_METRICS_ENABLED=true
COVENANT_METRICS_PORT=9090
COVENANT_METRICS_PATH=/metrics

# Jaeger Tracing
COVENANT_JAEGER_ENABLED=false
COVENANT_JAEGER_AGENT_HOST=localhost
COVENANT_JAEGER_AGENT_PORT=6831
COVENANT_JAEGER_SAMPLER_TYPE=const
COVENANT_JAEGER_SAMPLER_PARAM=1

# OpenTelemetry
COVENANT_OTEL_ENABLED=false
COVENANT_OTEL_EXPORTER=jaeger
COVENANT_OTEL_SERVICE_NAME=covenant-enterprise

# Datadog APM (optional)
COVENANT_DATADOG_ENABLED=false
DD_AGENT_HOST=localhost
DD_TRACE_AGENT_PORT=8126
DD_SERVICE=covenant-enterprise
DD_ENV=production

# Health Checks
COVENANT_HEALTH_CHECK_ENABLED=true
COVENANT_HEALTH_CHECK_INTERVAL=30

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/Disable Features
COVENANT_FEATURE_NEURAL_SYMBOLIC=true
COVENANT_FEATURE_QUANTUM_OPTIMIZER=false  # Experimental
COVENANT_FEATURE_BLOCKCHAIN_AUDIT=true
COVENANT_FEATURE_MULTI_AGENT=true
COVENANT_FEATURE_CONSENSUS_PROTOCOL=true

# Beta Features
COVENANT_BETA_GRAPHQL_API=false
COVENANT_BETA_WEBSOCKET_UPDATES=false

# =============================================================================
# CONSTRAINT ENGINE SETTINGS
# =============================================================================

# Constraint Evaluation
COVENANT_CONSTRAINT_PARALLEL_EVALUATION=true
COVENANT_CONSTRAINT_TIMEOUT=5  # seconds
COVENANT_CONSTRAINT_CACHE_ENABLED=true

# Formal Verification
COVENANT_FORMAL_VERIFICATION_ENABLED=true
COVENANT_FORMAL_VERIFICATION_TIMEOUT=10  # seconds

# Neural-Symbolic Reasoning
COVENANT_NEURAL_SYMBOLIC_MODEL=default
COVENANT_NEURAL_SYMBOLIC_CONFIDENCE_THRESHOLD=0.8

# =============================================================================
# AGENT SETTINGS
# =============================================================================

# Swarm Configuration
COVENANT_SWARM_MAX_AGENTS=100
COVENANT_SWARM_COMMUNICATION_TIMEOUT=5
COVENANT_SWARM_HEARTBEAT_INTERVAL=10

# Consensus Configuration
COVENANT_CONSENSUS_THRESHOLD=0.67  # 67% agreement required
COVENANT_CONSENSUS_TIMEOUT=30
COVENANT_CONSENSUS_MIN_VOTERS=3

# Agent Self-Improvement
COVENANT_AGENT_LEARNING_ENABLED=true
COVENANT_AGENT_LEARNING_RATE=0.01

# =============================================================================
# AUDIT & COMPLIANCE
# =============================================================================

# Audit Log Settings
COVENANT_AUDIT_ENABLED=true
COVENANT_AUDIT_LOG_PATH=./logs/audit
COVENANT_AUDIT_RETENTION_DAYS=365
COVENANT_AUDIT_ENCRYPTION_ENABLED=true

# Compliance Reporting
COVENANT_COMPLIANCE_REPORT_ENABLED=true
COVENANT_COMPLIANCE_REPORT_INTERVAL=daily  # daily, weekly, monthly
COVENANT_COMPLIANCE_REPORT_FORMAT=json  # json, pdf, csv

# Data Retention
COVENANT_DATA_RETENTION_ENABLED=true
COVENANT_DATA_RETENTION_DAYS=730  # 2 years

# GDPR Settings
COVENANT_GDPR_ENABLED=true
COVENANT_GDPR_DPO_EMAIL=dpo@example.com

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================

# Email Notifications
COVENANT_EMAIL_ENABLED=false
COVENANT_EMAIL_SMTP_HOST=smtp.gmail.com
COVENANT_EMAIL_SMTP_PORT=587
COVENANT_EMAIL_SMTP_USER=your-email@example.com
COVENANT_EMAIL_SMTP_PASSWORD=your-app-password
COVENANT_EMAIL_FROM_ADDRESS=noreply@covenant-ai.org
COVENANT_EMAIL_FROM_NAME=Covenant Enterprise

# Slack Notifications
COVENANT_SLACK_ENABLED=false
COVENANT_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
COVENANT_SLACK_CHANNEL=#covenant-alerts

# PagerDuty Integration
COVENANT_PAGERDUTY_ENABLED=false
COVENANT_PAGERDUTY_API_KEY=your-pagerduty-key
COVENANT_PAGERDUTY_SERVICE_ID=your-service-id

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Threading & Concurrency
COVENANT_WORKER_THREADS=4
COVENANT_MAX_CONCURRENT_REQUESTS=100

# Memory Limits
COVENANT_MAX_MEMORY_MB=2048
COVENANT_MEMORY_WARNING_THRESHOLD=0.8

# Request Queue
COVENANT_QUEUE_MAX_SIZE=1000
COVENANT_QUEUE_TIMEOUT=30

# Background Tasks
COVENANT_BACKGROUND_TASKS_ENABLED=true
COVENANT_BACKGROUND_TASKS_INTERVAL=60

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Backup Settings
COVENANT_BACKUP_ENABLED=false
COVENANT_BACKUP_INTERVAL=daily  # hourly, daily, weekly
COVENANT_BACKUP_RETENTION_DAYS=30
COVENANT_BACKUP_PATH=./backups

# S3 Backup (optional)
COVENANT_S3_BACKUP_ENABLED=false
COVENANT_S3_BUCKET=covenant-backups
COVENANT_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Hot Reload
COVENANT_HOT_RELOAD=true

# Test Database
COVENANT_TEST_DB_NAME=covenant_test

# Faker Seeds (for test data)
COVENANT_FAKER_SEED=12345

# Debug Tools
COVENANT_DEBUG_TOOLBAR=false
COVENANT_PROFILE_REQUESTS=false

# =============================================================================
# ENTERPRISE SETTINGS
# =============================================================================

# Multi-Tenancy
COVENANT_MULTI_TENANT_ENABLED=false
COVENANT_DEFAULT_TENANT=default

# License Key
COVENANT_LICENSE_KEY=your-enterprise-license-key

# Support Contact
COVENANT_SUPPORT_EMAIL=support@covenant-ai.org
COVENANT_SUPPORT_PHONE=+1-555-COVENANT

# =============================================================================
# CUSTOM SETTINGS
# =============================================================================

# Add your custom environment variables here
# CUSTOM_SETTING_1=value1
# CUSTOM_SETTING_2=value2
